\newcommand{\toss}[1]{%
    \addtocounter{pnum}{1}
    \begin{nopb}
        \begin{center}
            {\scshape \bfseries TOSS-UP}
        \end{center}
        \begin{enumerate}
            \setcounter{enumi}{\thepnum}
            \item \sci{#1}
        \end{enumerate}
    \end{nopb}
}
